# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database_name

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_key_here

# PayPal Configuration
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# USPS OAuth 2.0 API Configuration (New Platform)
USPS_CONSUMER_KEY=your_consumer_key
USPS_CONSUMER_SECRET=your_consumer_secret
USPS_CUSTOMER_REGISTRATION_ID=your_crid
USPS_MAILER_ID=your_mailer_id

# Legacy USPS Web Tools (DEPRECATED - for reference only)
# USPS_USERNAME=your_usps_web_tools_username  
# USPS_PASSWORD=your_usps_web_tools_password

# Node Environment
NODE_ENV=development

# Server Port
PORT=3000

# Email Notifications (Gmail SMTP)
SMTP_EMAIL=your-gmail@gmail.com
SMTP_PASSWORD=your-app-specific-password

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Admin Contact Info
ADMIN_EMAIL=admin@rellskitchen.com
ADMIN_PHONE=+15017609490